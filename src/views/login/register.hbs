<!--Indica la versión de HTML que se usó para escribir el documento e idioma.-->
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Registrarse</title>
    <!-- Tailwind CSS Link -->
    <link rel="stylesheet"
    href="https://cdnjs.cloudflare.com/ajax/libs/tailwindcss/2.0.1/tailwind.min.css">
    <!-- Fontawesome Link -->
    <link href="https://pro.fontawesome.com/releases/v5.10.0/css/all.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
  </head>

    <div class="block mx-auto my-12 p-8 bg-white w-1/3 border border-gray-200 rounded-lg
    shadow-lg text-gray-800 rounded-3xl">

        <div class="d-flex justify-content-center">
        <img src="https://upload.wikimedia.org/wikipedia/commons/9/99/Sample_User_Icon.png" alt="" style="height: 7rem;">
        </div>

        <!--titulo del container -->
        <h1 class="text-2xl font-bold text-center">Registrarse</h1>

        <form action="" method="post" class="mt-4"> 
            <!--cuadro de texto para escribir el nombre del usuario-->
            <label for="">Nombre</label>
            <input type="text" name="name" placeholder="Nombre"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" required>
            <!--required sive para que no se pueda enviar el formulario sin estar contestado ese campo-->

            <!--cuadro de texto para escribir el apellido paterno del usuario-->
            <label for="">Apellido Paterno</label>
            <input type="text" name="ap_paterno" placeholder="Apellido Paterno"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" required>

            <!--cuadro de texto para escribir el apellido materno-->
            <label for="">Apellido Materno</label>
            <input type="text" name="ap_materno" placeholder="Apellido Materno"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" required>
            
            <!--cuadro de texto para escribir numero telefonico (maxino 10 digitos, no se pueden escribir letas)-->
            <label for="">Numero de Telefono</label>
            <input type="number" name="telefono" maxlength="10"
            oninput="if(this.value.length > this.maxLength) this.value = this.value.slice(0, this.maxLength);"
            placeholder="Numero de Telefono"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" required>

            <!--cuadro para escibir fecha de nacimiento (no se puede escibir letas por el tipo date)-->
            <label for="">Fecha de Nacimiento</label>
            <input type="date" name="fecha_n" placeholder="Fecha de Nacimiento"
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" required>

            <!--cuadro de texto para escribir el email (no se puede contestar sin @)-->
            <label for="">Correo Electronico</label>
            <input type="email" name="email" id="email" placeholder="Email" 
            onkeyup="validar_email" class="border border-gray-200 w-full text-lg placeholder-gray-500
             p-2 my-2 bg-gray-300 focus:bg-white rounded-3xl" required>

            <!--cuadro de texto para escribir la contaseña con tipo password (encriptado)-->
            <label for="">Contraseña</label>
            <input type="password" name="password" placeholder="Contraseña" 
            class="border border-gray-200 w-full text-lg placeholder-gray-500 p-2 my-2 
            bg-gray-300 focus:bg-white rounded-3xl" required>
            
            <!--Boton para poder crear cuenta con el formulario previamente contestado-->
            <button type="submit" class="rounded-md bg-yellow-800 w-full text-lg text-white 
            font-semibold p-2 my-3 hover:bg-yellow-900 focus:bg-yellow-900">Crear Cuenta</button>
            
            <!--imprime error en la parte inferior del container-->
            {{#if error}}
                <p class="text-red-500 font-bold text-lg my-3 ">{{error}}</p>
            {{/if}}

        </form>

        <script src="/src/controllers/validaciones.js"></script>
        <div class="d-flex justify-content-center">
          <!--Hipervinulo que re dirige a el login para poder iniciar sesión-->
        <p>Ya Tienes Cuenta <a href="/login" class="gra-text">Inicia Sesión</a></p>
        </div>
    
    </div>

</html>
<!--Se cierran las etiquetas--> 